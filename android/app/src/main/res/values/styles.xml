<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowIsTranslucent">false</item> //add 用于设置透明白背景
         <item name="android:windowTranslucentStatus">false</item> // 设置状态栏不占据空间
    </style>
    <style name="SplashScreenTheme" parent="SplashScreen_SplashTheme">
        <item name="colorPrimaryDark">@color/status_bar_color</item>   //状态栏颜色
        <item name="android:windowLightStatusBar">true</item> // 设置状态栏字体颜色
    </style>
</resources>
